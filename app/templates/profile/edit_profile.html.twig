{% extends "base.html.twig" %}

{% block body %}
    <div class="ml-3 mr-3">
        {{ form_start(profileForm) }}
            <div class="">
                {{ form_widget(profileForm.name, {'attr':{'class':'w-full border mt-8 p-3 rounded-xl','placeholder':'Name'}}) }}
                {{ form_errors(profileForm.name) }}
            </div>
            <div>
                {{ form_widget(profileForm.bio, {'attr':{'class':'w-full border mt-4 p-3 rounded-xl','placeholder':'Bio'}}) }}
                {{ form_errors(profileForm.bio) }}
            </div>
            <div>
                {{ form_widget(profileForm.location, {'attr':{'class':'w-full border mt-3 p-3 rounded-xl','placeholder':'Location'}}) }}
                {{ form_errors(profileForm.location) }}
            </div>
            <div>
                {{ form_widget(profileForm.website, {'attr':{'class':'w-full border mt-4 p-3 rounded-xl','placeholder':'Website'}}) }}
                {{ form_errors(profileForm.website) }}
            </div>
            <div class="mt-4">
                {{ form_label(profileForm.birthDate, 'Date of Birth', {'label_attr':{'class':'text-sm'}}) }}
                {{ form_widget(profileForm.birthDate, {'attr':{'class':'w-full border p-3 rounded-xl'}}) }}
                {{ form_errors(profileForm.birthDate) }}
            </div>
            <div class="mt-4">
                {{ form_label(profileForm.avatar, 'Profile Image', {'label_attr':{'class':'text-sm'}}) }}
                {{ form_widget(profileForm.avatar, {'attr':{'class':'w-full p-10 rounded-xl border file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-green-500 file:text-white hover:file:bg-green-400'}}) }}
                {{ form_errors(profileForm.avatar) }}
            </div>
            <div class="mt-4">
                {{ form_label(profileForm.backgroundImage, 'Background Image', {'label_attr':{'class':'text-sm'}}) }}
                {{ form_widget(profileForm.backgroundImage, {'attr':{'class':'w-full p-10 rounded-xl border file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-green-500 file:text-white hover:file:bg-green-400','title':'fgag'}}) }}
                {{ form_errors(profileForm.backgroundImage) }}
            </div>
            <div class="mt-6 flex justify-end">
                <button class="p-2 w-1/5 rounded-full bg-gray-900 text-white font-semibold" type="submit">Save</button>            
            </div>
        {{ form_end(profileForm) }}
    </div>
{% endblock %}

{% block modal %}
    {% if app.user %}
        <div class="block">
            {{ include('main/_form.html.twig', {form:form1}) }}
        </div>
    {% endif %}
{% endblock %}